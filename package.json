{
  "name": "postgres-pool",
  "version": "9.0.0-beta1",
  "description": "Node postgres connection pool implementation for node-pg",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "certs",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "unbuild",
    "test": "npm run test:types && mocha tests/tests.ts",
    "test:types": "tsc --noEmit --skipLibCheck",
    "lint:markdown": "prettier --cache --write '*.md' '!(node_modules|dist)/**/*.md' && markdownlint '*.md' '!(node_modules|dist)/**/*.md' --config=.github/linters/.markdown-lint.yml --fix",
    "lint:code": "eslint --fix",
    "lint": "run-p lint:*",
    "lint-staged": "lint-staged",
    "beta": "npm publish --tag beta",
    "prepublishOnly": "npm run lint && npm run test && npm run build && pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.md": [
      "prettier --write --cache",
      "markdownlint --config=.github/linters/.markdown-lint.yml --fix"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.cjs": [
      "eslint --fix"
    ],
    "*.mjs": [
      "eslint --fix"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/postgres-pool/postgres-pool.git"
  },
  "keywords": [
    "node",
    "postgres",
    "pg",
    "pool",
    "connection",
    "pooling"
  ],
  "author": "Jim Geurts <jim@biacreations.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/postgres-pool/postgres-pool/issues"
  },
  "homepage": "https://github.com/postgres-pool/postgres-pool#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/pg": "^8.11.6",
    "@types/uuid": "^9.0.8",
    "pg": "^8.11.5",
    "strict-event-emitter-types": "^2.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.0.3",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.4.0",
    "@faker-js/faker": "^8.4.1",
    "@swc/core": "1.5.24",
    "@types/chai": "^4.3.16",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "@types/node": ">=20",
    "@types/sinon": "^17.0.3",
    "chai": "^5.1.1",
    "chai-as-promised": "^7.1.2",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.7",
    "eslint-plugin-mocha": "10.4.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-security": "^3.0.0",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "markdownlint-cli": "^0.41.0",
    "mocha": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.7",
    "sinon": "^18.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0-alpha.24"
  }
}
